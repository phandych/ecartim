<h2>Shopping Cart</h2>

<table class="table table-bordered"> 
	<thead> 
		<tr> 
			<th>Product Name</th> 
			<th>Quantity</th> 
			<th>Unit Price</th> 
			<th>Subtotal Row</th> 
		</tr> 
	</thead> 
	<tbody> 
		<%= render 'cart' %>
		
	</tbody> 
</table>
<div class="row">
	<div class="col-md-8"></div>
	<div class="col-md-4 col-md-offset">
		<table class="table table-hover"> 
			<tbody> 
				<tr> 
					<th scope="row">Subtotal</th> <td><%= number_to_currency current_cart.subtotal %></td> 
				</tr> 
				<tr> 
					<th scope="row">Shipping</th> <td>Gratis</td>
				</tr> 
				<tr> 
					<th scope="row">Subtotal</th> <td><%= number_to_currency current_cart.subtotal %></td> 
				</tr> 
			</tbody> 
		</table>
	</div>	
</div>
